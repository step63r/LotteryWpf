            <EasingColorKeyFrame KeyTime="0:0:0.25" Value="#FFFFFF00"/>
            <EasingColorKeyFrame KeyTime="0:0:0.30" Value="#FFFFA500"/>
            <EasingColorKeyFrame KeyTime="0:0:0.35" Value="#FFFF0000"/>
        </ColorAnimationUsingKeyFrames>
